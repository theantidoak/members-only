<li class="messages__item" id="<%= message.id %>">
  <h3 class="messages__title"><%= message.title %></h3>
  <p class="messages__text"><%= message.text %></p>
  <% if ( user.id !== null ) { %>
    <div class="messages__byline">
      <p class="messages__author">By: <%= message.user.name %></p>
      <p class="messages__date">Published: <%= message.date %></p>
      <% if (message.date !== message.edit_date) { %>
        <p class="messages__edit-date">Updated: <%= message.edit_date %></p>
      <% } %>
    </div>
  <% } %>
  <% if ( user.id === message.user.id || user.membership_status === 'admin') { %>
    <div class="messages__buttons">
      <% if ( user.id === message.user.id ) { %>
        <button class="messages__edit-btn">Edit</button>
      <% } %>
      <button class="messages__delete-btn">Delete</button>
    </div>
  <% } %>
</li>